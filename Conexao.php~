<?php

class Conexao {
    private static $myconn;
    
    public static function connect($host = "localhost", $user = "root", $pass="", $db = "agenda1"){
        $conn = mysqli_connect($host, $user, $pass);
         if (!$conn){
             die ("Não foi possível conectar: ".  mysqli_error($conn));
         }else{
             self::$myconn = $conn;
             echo "Conexão realizada com sucesso!";
         }        
         if (! mysqli_select_db(self::$myconn, $db) ){
              die ("Não foi possível acessar base: ".  mysqli_error($conn));
         }else{
             echo "Base de dados selecionada com sucesso!";
         }
         return self::$myconn;    
    }
    
    public static function close(){
        mysqli_close(self::$myconn);
    }
}

